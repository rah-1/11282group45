<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FuelCostActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fuel Cost Calculator"
        android:textColor="#000000"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="32dp" />

    <EditText
        android:id="@+id/fuelamountfield"
        android:layout_width="177dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="163dp"
        tools:text="Enter Fuel Amount" />

    <EditText
        android:id="@+id/fuelcostunitpricefield"
        android:layout_width="174dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="207dp"
        tools:layout_editor_absoluteY="163dp"
        tools:text="Enter Unit Price" />

    <Button
        android:id="@+id/fuelcostcalculatebutton"
        android:layout_width="128dp"
        android:layout_height="62dp"
        android:text="Calculate"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="239dp" />

    <RadioButton
        android:id="@+id/ishypotheticalbutton"
        android:layout_width="121dp"
        android:layout_height="51dp"
        android:text="Hypothetical"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="239dp" />

    <TextView
        android:id="@+id/fuelcostresulttext"
        android:layout_width="245dp"
        android:layout_height="64dp"
        android:textAlignment="center"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="369dp"
        tools:text="Result" />
</androidx.constraintlayout.widget.ConstraintLayout>