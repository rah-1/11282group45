<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllCalculatorsActivity">

    <Button
        android:id="@+id/fuelcostbutton"
        android:layout_width="137dp"
        android:layout_height="73dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="160dp"
        android:text="Fuel Cost"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buyablefuelbutton"
        android:layout_width="137dp"
        android:layout_height="73dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="44dp"
        android:text="Buyable Fuel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/gasmileagecalculatorbutton"
        android:layout_width="137dp"
        android:layout_height="73dp"
        android:layout_marginTop="280dp"
        android:text="Gas Mileage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="All Calculators"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>


