<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/recordtripbutton"
        android:layout_width="324dp"
        android:layout_height="75dp"
        android:layout_marginTop="64dp"
        android:text="Record Trip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/vehicleprofilesbutton"
        android:layout_width="152dp"
        android:layout_height="74dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="172dp"
        android:text="Vehicles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/alldatalogs"
        android:layout_width="152dp"
        android:layout_height="74dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="284dp"
        android:text="Data Logs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/allrecords"
        android:layout_width="152dp"
        android:layout_height="74dp"
        android:layout_marginStart="216dp"
        android:layout_marginTop="284dp"
        android:layout_marginEnd="43dp"
        android:text="Records"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/allcalculatorsbutton"
        android:layout_width="152dp"
        android:layout_height="74dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="40dp"
        android:text="Calculators"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/environmentaltrackingbutton"
        android:layout_width="324dp"
        android:layout_height="75dp"
        android:layout_marginTop="396dp"
        android:text="Environmental Tracking"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>